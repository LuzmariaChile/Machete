    function Confirm_button(e, t) {
        e.preventDefault();
        var theHref =  $(t).attr('href');
        $.alerts.okButton = "@WorkerSignins.deletesubmit";
        jConfirm('@WorkerSignins.deleteconfirmation',
                     '@WorkerSignins.deletetitle',
                     function (r) {
                         if (r == true) { window.location = theHref; }
                     });
                     return false;
    }
</script>