@using Machete.Web.Resources
<div id="summaryWrapper" class="report-wrapper">
    <div id="summaryHeader">
        <div id="summaryPopup">
            <h3 class="report-padding-left-half">
                @Reports.summaryHeader
                <input type="button" value="?" class="formButton report-top report-align-right report-instructions-show" />
            </h3>
            <p id="summaryInstructions" class="report-instructions">
                @Reports.summaryInstructions
                <input type="button" value="@Reports.hideHelp" class="formButton report-top report-align-right report-instructions-hide" />
            </p>
        </div>
    </div>
    <div id="summaryReports" class="report-accordion">
        <h3 class="report-subtitle">
            <a href="#" id="dclLink">Daily</a>
        </h3>
        <div id="dclTable" class="report-container">
            <input type="button" value="Refresh" class="formButton report-top" id="dclDataOnlyBtn" />
            <input type="button" value="Print Report" class="formButton report-top" id="dclPrintReport" />
            <input type="button" value="Spreadsheet" class="formButton report-top" id="dclSpreadsheet" />
            @Html.TextBox("activeDate", @DateTime.Now.ToShortDateString(), new { @class = "report-datepicker report-top", @id = "dclDate" })
            <p id="dclHelp" class="report-inline report-top"><em>@Reports.dayInstructions</em></p>
            <table id="dclDataTable" class="display report-datatable">
                <thead>
                    <tr>
                        <th>@Reports.date</th>
                        <th>@Reports.dwcList</th>
                        <th>@Reports.dwcPropio</th>
                        <th>@Reports.hhhList</th>
                        <th>@Reports.hhhPropio</th>
                        <th>Unique</th>
                        <th>@Reports.totalSignins</th>
                        <th>@Reports.totalAssignments</th>
                        <th>@Reports.cancelledJobs</th>
                    </tr>
                </thead>
            </table>
            <div id="dailyPieChart1" style="height:auto;width:80%;display:block;"></div>
            <div id="dailyPieChart2" style="height:auto;width:80%;display:block;"></div>
        </div>
        <h3 class="report-subtitle"><a href="#" id="wecLink">Weekly</a></h3>
        <div id="wecTable" class="report-container">
            <div class="report-top-div-left">
                <input type="button" value="Refresh" class="formButton report-top" id="wecDataOnlyBtn" />
                <input type="button" value="Print" class="formButton report-top" id="wecPrintReport" />
                <input type="button" value="Spreadsheet" class="formButton report-top" id="wecSpreadsheet" />
                @Html.TextBox("activeDate", @DateTime.Now.ToShortDateString(), new { @class = "report-datepicker-weekly report-top", @id = "wecDate" })
            </div>
            <div class="report-top-div-right">
                <p id="wecHelp" class="report-tip report-top report-instructions"><em>@Reports.weekInstructions</em></p>
            </div>
            <table id="wecDataTable" class="display report-datatable">
                <thead>
                    <tr>
                        <th>@Reports.weekday</th>
                        <th>@Reports.date</th>
                        <th>@Reports.totalSignins</th>
                        <th>@Reports.totalAssignments</th>
                        <th>@Reports.weekEstDailyHours</th>
                        <th>@Reports.weekEstPayment</th>
                        <th>@Reports.weekHourlyWage</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <h3 class="report-subtitle"><a href="#" id="mwdLink">Monthly</a></h3>
        <div id="mwdTable" class="report-container">
            <div class="report-top-div-left">
                <input type="button" value="Refresh" class="formButton report-top" id="mwdDataOnlyBtn" />
                <input type="button" value="Print" class="formButton report-top" id="mwdPrintReport" />
                <input type="button" value="Spreadsheet" class="formButton report-top" id="mwdSpreadsheet" />
                @Html.TextBox("activeDate", @DateTime.Now.ToShortDateString(), new { @class = "report-datepicker report-top", @id = "mwdDate" })
            </div>
            <div class="report-top-div-right">
                <p id="mwdHelp" class="report-tip report-instructions report-top"><em>@Reports.monthInstructions</em></p>
            </div>
            <table id="mwdDataTable" class="display report-datatable">
                <thead>
                    <tr>
                        <th>@Reports.date</th>
                        <th>@Reports.activeMembers</th>
                        <th>@Reports.totalSignins</th>
                        <th>@Reports.wentToClass</th>
                        <th>@Reports.dispatched</th>
                        <th>@Reports.totalHours</th>
                        <th>@Reports.totalIncome</th>
                        <th>@Reports.avgIncome</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th><strong>Totals</strong></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td colspan="4"></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
            @*            <div id="monthlyPieChart1" style="height:auto;width:80%;margin-top:3em;"></div> *@
        </div>
        <h3 class="report-subtitle"><a href="#" id="ywdLink">Yearly</a></h3>
        <div id="ywdTable" class="report-container">
            <div class="report-top-div-left">
                <input type="button" value="Refresh" class="formButton report-top" id="ywdDataOnlyBtn" />
                <input type="button" value="Print" class="formButton report-top" id="ywdPrintReport" />
                <input type="button" value="Spreadsheet" class="formButton report-top" id="ywdSpreadsheet" />
                @Html.TextBox("activeDate", @DateTime.Now.ToShortDateString(), new { @class = "report-datepicker report-top", @id = "ywdDate" })
            </div>
            <div class="report-top-div-right">
                <p id="ywdHelp" class="report-tip report-top report-instructions"><em>@Reports.yearInstructions</em></p>
            </div>
            <table id="ywdDataTable" class="display report-datatable">
                <thead>
                    <tr>
                        <th>@Reports.date</th>
                        <th>@Reports.activeMembers</th>
                        <th>@Reports.totalSignins</th>
                        <th>@Reports.wentToClass</th>
                        <th>@Reports.dispatched</th>
                        <th>@Reports.totalHours</th>
                        <th>@Reports.totalIncome</th>
                        <th>@Reports.avgIncome</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th><strong>Totals</strong></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td colspan="4"></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
            @*            <div id="yearlyPieChart1" style="height:auto;width:80%;margin-top:3em;"></div> *@
        </div>
    </div>
</div>