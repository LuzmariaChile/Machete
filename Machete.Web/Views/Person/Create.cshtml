@model Machete.Domain.Person
@{
    ViewBag.Title = @Machete.Web.Resources.Persons.createtitle;
}
<h2>@Machete.Web.Resources.Persons.createtitle</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Machete.Web.Resources.Persons.boxlegend</legend>
        <!--
        This pulls from views/shared/editortemplates. 
        name is by convention, model name
        !-->
        @Html.EditorForModel()
        <p>
            <input type="submit" value=@Machete.Web.Resources.Persons.createsubmit />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink(@Machete.Web.Resources.Persons.indexreturnlink, "Index")
</div>
