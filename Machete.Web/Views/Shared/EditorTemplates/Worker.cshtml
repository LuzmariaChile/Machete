 <script type="text/javascript">
     $().ready(function () {
         DatePicker();
         EnableDisableRace();
     });
     function DatePicker() {
         $('.ui-datepicker').datepicker({
             dateFormat: 'mm/dd/yy',
             buttonImage: '@Url.Content("~/Content/calendar.gif")',
             buttonImageOnly: true,
             showOn: "button"
         });
     }
     function EnableDisableRace() {
         if ($("#worker_RaceID option:selected").text() == "Other") {
             $("#worker_raceother").show();
             $("#worker_raceotherlabel label").show();
         } else {
             $("#worker_raceother").hide();
             $("#worker_raceotherlabel label").hide();
         }
     }
</script>