@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = @Machete.Web.Resources.Shared.Error;
    
}

<h2>
    @Machete.Web.Resources.Shared.ErrorPgExplanation
</h2>
<div>
<p><b>@Machete.Web.Resources.Shared.ErrorPgControllerLabel</b>
@Model.ControllerName
</p>
<p><b>@Machete.Web.Resources.Shared.ErrorPgActionLabel</b>
@Model.ActionName
</p>
<p><h3>
@Machete.Web.Resources.Shared.ErrorPgExceptionLabel
</h3>
@Model.Exception
</p>

</div>