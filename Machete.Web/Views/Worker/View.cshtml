@model Machete.Web.ViewModel.WorkerViewModel
@using Machete.Web.Helpers
@{
    ViewBag.Title = Machete.Web.Resources.Workers.viewtitle;
}
<h2>@Machete.Web.Resources.Workers.viewtitle</h2>
<p>
    @if (Html.IsInRole(Html.Role_AMP()))
    {
        @Html.ActionLink(@Machete.Web.Resources.Workers.editworkerlink, "Edit", new { id = Model.worker.ID })
        @Html.Encode(" | ");
    }
    @Html.ActionLink(Machete.Web.Resources.Workers.indexreturnlink, "Index")
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <fieldset>
        <legend>@Machete.Web.Resources.Persons.boxlegend</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    @Html.EditorFor(model => model.person)
                </td>
                <td>
                    @if (Model.image.ImageData == null)
                    {
                        <p>
                            @Html.Label(@Machete.Web.Resources.Workers.noimagelabel)
                        </p>
                    }
                    else
                    {
                        <img src="@Url.Action("GetImage", "Image", new { Model.image.ID })" alt="" />
                    }
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <legend>@Machete.Web.Resources.Workers.boxlegend</legend>
        <!--
        
        This pulls from views/shared/editortemplates. 
        name is by convention, model name
        
        !-->
        @Html.EditorFor(model => model.worker)
    </fieldset>
<script type="text/javascript">
    $().ready(function () {
        $('.editor-field').children().attr('disabled', 'disabled')
    });
</script>