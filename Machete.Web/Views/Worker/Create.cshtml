@model Machete.Web.ViewModel.WorkerViewModel
@{
    ViewBag.Title = Machete.Web.Resources.Workers.createtitle;
}
<h2>Create</h2>
<p>
    @Html.ActionLink(Machete.Web.Resources.Workers.indexreturnlink, "Index")
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Machete.Web.Resources.Persons.boxlegend</legend>
        @Html.EditorFor(model => model.person)
    </fieldset>
    <fieldset>
        <legend>@Machete.Web.Resources.Workers.boxlegend</legend>
        @Html.EditorFor(model => model.worker)
        <p>
            <input type="submit" value="@Machete.Web.Resources.Workers.createsubmit" />
        </p>
    </fieldset>
}


