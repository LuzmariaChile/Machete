@model Machete.Web.ViewModel.WorkerViewModel
@{
    ViewBag.Title = "Worker::Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Person information</legend>
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    @Html.EditorFor(model => model.person)
                </td>
                <td>
                    @if (Model.image.ImageData == null)
                    {
                        <p>
                            @Html.Label("No image")
                        </p>
                    }
                    else
                    {
                        <img src="@Url.Action("GetImage", "Image", new { Model.image.ID })" alt="" />
                    }
                </td>
            </tr>
        </table>
    </fieldset>
    <fieldset>
        <legend>Worker information</legend>
        <!--
        
        This pulls from views/shared/editortemplates. 
        name is by convention, model name
        
        !-->
        @Html.EditorFor(model => model.worker)
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
