@model Machete.Web.Models.EditUserViewModel        
@{
    ViewBag.Title = "Edit User";
}

<h2>@ViewBag.Title</h2>

<p style="color:red;">
    <strong>@ViewBag.Message</strong>     
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="tb-table" style="float: left;">
    <fieldset>
    <legend>MembersModel</legend>
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="tb-field">
                @Html.DisplayTextFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="tb-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.IsApproved)
            </div>
            <div class="tb-field">
                @Html.EditorFor(model => model.IsApproved)
                @Html.ValidationMessageFor(model => model.IsApproved)
            </div>
        </div>
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.IsLockedOut)
            </div>
            <div class="tb-field">
                @Html.EditorFor(model => model.IsLockedOut)
                @Html.ValidationMessageFor(model => model.IsLockedOut)
            </div>
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
        </fieldset>
    </div>


    <div class="tb-table" style="float: left;">
    <h3>Password Recovery</h3>
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.NewPassword)
            </div>
            <div class="tb-field">
                @Html.EditorFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>
    <p>(Leave this blank unless you want to change the user's password.)</p>
    </div>

}
<div style="clear: left;">
    @Html.ActionLink("Back to List", "Index")
</div>
