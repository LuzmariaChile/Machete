@model Machete.Web.Models.RegisterModel
@{
    ViewBag.Title = @Machete.Web.Resources.ValidationStrings.RegisterTitle;
}
<h2>@Machete.Web.Resources.ValidationStrings.RegisterSubTitle</h2>
<p>
    @Machete.Web.Resources.ValidationStrings.RegisterInstructions
</p>
<p>
    @Machete.Web.Resources.ValidationStrings.RegisterPassLength1 @ViewBag.PasswordLength
    @Machete.Web.Resources.ValidationStrings.RegisterPassLength2
</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, @Machete.Web.Resources.ValidationStrings.RegisterValSummary)
    <div>
        <fieldset>
            <legend>@Machete.Web.Resources.ValidationStrings.RegisterLegend</legend>
            <div class="tb-table">
                <div class="tb-row">
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.FirstName)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.TextBoxFor(m => m.FirstName)
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.LastName)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.TextBoxFor(m => m.LastName)
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
                <div class="tb-row">
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.Email)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="tb-row">
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.ConfirmPassword)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.PasswordFor(m => m.ConfirmPassword)
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="tb-row">
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.question)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.TextBoxFor(m => m.question)
                        @Html.ValidationMessageFor(m => m.question)
                    </div>
                </div>
                <div class="tb-row">
                    <div class="tb-label tb-cell">
                        @Html.LabelFor(m => m.answer)
                    </div>
                    <div class="tb-field tb-cell">
                        @Html.TextBoxFor(m => m.answer)
                        @Html.ValidationMessageFor(m => m.answer)
                    </div>
                </div>
            </div>
            <p>
                <input type="submit" value="@Machete.Web.Resources.ValidationStrings.Register" />
            </p>
        </fieldset>
    </div>
}
